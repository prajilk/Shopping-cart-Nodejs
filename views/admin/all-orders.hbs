<style>
    @media only screen and (max-width: 360px){
        h5,span,h6 {
            font-size: 11px;
        }
    }
    @media only screen and (max-width: 460px){
        h5,span,h6 {
            font-size: 13px;
        }
    }
</style>

<section>

    {{#if allOrders}}

    <section class="h-100">
        <div class="container h-100 py-5 bg-white">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-10">

                    <div class="align-items-center mb-4">
                        <h3 class="fw-normal mb-0 text-black">All Orders</h3>
                    </div>

                    {{#each allOrders}}
                    <a href="all-orders/view-order/{{this.orders._id}}" class="text-decoration-none">
                        <div class="card rounded-3 mb-4 shadow-sm" style="cursor: pointer;">
                            <div class="card-body p-4">
                                <div class="row d-flex justify-content-start align-items-center">
                                    <div class="col-md-6 col-lg-9 col-xl-9">
                                        <p class="lead fw-normal mb-2">{{this.title}}</p>
                                        <h5 class="text-muted">Order ID: <span class="text-dark">{{this.orders._id}}</span></h5>
                                        <span class="text-muted">User ID: <span class="text-dark">{{this.user}}</span></span>
                                        <h6 class="text-muted">Date: <span class="text-dark">{{this.orders.date}}</span></h6>
                                        <h6 class="text-muted">Order status: <span class="{{checkStatus this.orders.status}} fw-bold">{{compareStatus this.orders.status}}</span></h6>
                                        <span>Ordered {{getDateDifferenceInDays this.orders.date}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                    {{/each}}

                </div>
            </div>
        </div>
    </section>

    {{else}}
    <section class="h-100 mt-5">
        <div class="text-center">
            <h2>No orders</h2>
        </div>
    </section>
    {{/if}}
</section>