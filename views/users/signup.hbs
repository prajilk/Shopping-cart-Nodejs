<section>
    <div class="container">
        <form action="/signup" method="post" class="col-md-6 m-auto mt-5">
            <h2 class="mb-4">Create new account</h2>
            {{#if this.isSignupError}}
            <p class="border text-danger border-danger rounded p-2 fw-bold">{{this.isSignupError}} Try to <a href="/login" class="text-primary text-decoration-underline">login</a></p>
            {{/if}}
            <div class="form-group">
                <label>Name</label>
                <input type="text" name="name" class="form-control mb-4" placeholder="Enter name" required>
            </div>
            <div class="form-group">
                <label>Email address</label>
                <input type="email" name="email" class="form-control mb-4" aria-describedby="emailHelp"
                    placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control mb-4" placeholder="Password" required>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/login" class="text-decoration-none">Already have account ?</a>
                <button type="submit" class="btn btn-primary float-right">Create account</button>
            </div>
        </form>
    </div>
</section>