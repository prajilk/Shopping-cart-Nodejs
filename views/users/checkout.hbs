<div class="container">

    <div class="row py-5">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
            </h4>
            <ul class="list-group mb-3">
                {{#each cartItems}}
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">{{this.productDetails.title}}</h6>
                        <small class="text-muted">{{this.productDetails.description}}</small>
                    </div>
                    <span class="text-muted">{{priceInIndianFormat this.productDetails.price}}</span>
                </li>
                {{/each}}
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total amount:</span>
                    <strong>{{priceInIndianFormat totalPrice}}</strong>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <form class="needs-validation" action="/checkout" method="post">


                <div class="card mt-4">
                    <div class="card-header ps-4 d-flex justify-content-between">
                        Deliver to:
                        <div>
                            <a href="/address" class="btn btn-primary pt-0 pb-1 ps-2 pe-2">Change</a>
                        </div>
                    </div>
                    <div class="card-body d-flex justify-content-between ps-4 border-bottom border-dark">
                        <div>
                            <h5 class="card-title">{{address.fname}} {{address.lname}}</h5>
                            <p class="card-text">{{address.address}},{{address.city}},{{address.state}} - {{address.pincode}}</p>
                            <p class="card-text">{{address.phone}}</p>
                        </div>
                    </div>
                </div>

                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="cod" name="paymentMethod" value="COD" type="radio" class="custom-control-input" checked>
                        <label class="custom-control-label" for="cod">COD (Cash on Delivery)</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="credit" name="paymentMethod" value="Online payment" type="radio" class="custom-control-input">
                        <label class="custom-control-label" for="credit">Online payment</label>
                    </div>
                </div>
                <hr class="mb-4">
                <button class="btn btn-primary btn-lg btn-block" type="submit">PLACE ORDER</button>
            </form>
        </div>
    </div>
</div>
</div>