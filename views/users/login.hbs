<section>
    <div class="container">
        <form action="/login" method="post" class="col-md-6 m-auto mt-5">
            <h2 class="mb-4">Login</h2>
            {{#if this.isLoginError}}
            <p class="text-light bg-danger rounded p-2">{{this.isLoginError}}</p>
            {{/if}}

            <div class="form-group">
                <label>Email address</label>
                <input type="email" name="email" class="form-control mb-4" aria-describedby="emailHelp"
                    placeholder="Enter email" required>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" name="password" class="form-control mb-4" placeholder="Password" required>
            </div>
            <div class="d-flex justify-content-between">
                <a href="/signup" class="text-decoration-none">Create new account ?</a>
                <button type="submit" class="btn btn-primary float-right">Login</button>
            </div>
        </form>
    </div>
</section>